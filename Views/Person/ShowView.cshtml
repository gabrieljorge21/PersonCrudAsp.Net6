@using PersonCrud_Data;
@model DBList
@{
    ViewData["Title"] = "ShowView";
}

<h1>List</h1>
<h4>People</h4>

<table class="table" >
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Document</th>
            <th scope="col">First Name</th>
            <th scope="col">Last Name</th>
            <th scope="col">Birthdate</th>
            <th scope="col">Married</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in DBList.Instance())
        {
            <tr>
                <td>@person.Id</td>
                <td>@person.Document</td>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
                <td>@person.Birthdate.ToShortDateString()</td>
                <td>@person.Married</td>
                <form action="Delete">
                    <td><button type="button" class="btn btn-info" asp-controller="Person" asp-action="Edit">Modify</button></td>
                    <td><button type="submit" class="btn btn-danger" asp-controller="Person" asp-action="Delete"asp-route-id="@person.Id">Delete</button></td>
                </form>
            </tr>
        }

    </tbody>
</table>